<h1>Tickets: <%= @tickets.size %> <%= @tickets[0].status %></h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Description</th>
      <th>Created At</th>
      <th>Requester ID</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.subject, ticket_path(ticket.id) %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.created_at %></td>
        <td><%= ticket.requester_id %></td>
        <td><%= ticket.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
